# Database
# Local PostgreSQL:
# DATABASE_URL=postgresql://chessly:chessly@localhost:5432/chessly
# Supabase (add ?sslmode=require for production):
DATABASE_URL=postgresql://postgres:@db.xxx.supabase.co:5432/postgres?sslmode=require

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend URL for CORS (set to your Vercel URL in production)
FRONTEND_URL=http://localhost:3000

# Discord OAuth2 (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/callback/discord

# Stockfish path (usually /usr/bin/stockfish or /usr/games/stockfish)
STOCKFISH_PATH=/usr/bin/stockfish
